@import './variable.styl'

@font-face 
  font-family: 'special-for-me'
  src: url('assets/fonts/ljh.ttf') format('truetype')
  font-weight: normal
  font-style: normal

*,
*::before,
*::after 
  margin: 0;
  padding: 0;
  box-sizing: border-box;
html 
  font-size: $font-size-small
ul
  list-style-type: none 
a
  text-decoration: none

#toc 
  position: absolute
  right: 0
  color: #000
  background: #fff